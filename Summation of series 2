#include <stdio.h>
#include <math.h>
	
int main() {
int x, n;
long long sum;

printf("Enter value of x: ");  
scanf("%d", &x);  

printf("Enter value of n: ");  
scanf("%d", &n);  

// Formula: (r^(n+1) - 1) / (r - 1), here a = 1  
sum = (pow(x, n + 1) - 1) / (x - 1);  

printf("Sum (Method 1) = %lld\n", sum);  
return 0;}
