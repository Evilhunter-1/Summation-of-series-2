#include <stdio.h>

int main() {
    int x, n, i;
    long long sum = 0, term = 1;  // start with a = 1

    printf("Enter value of x: ");
    scanf("%d", &x);

    printf("Enter value of n: ");
    scanf("%d", &n);

    for(i = 0; i <= n; i++) {
        sum = sum + term;
        term = term * x;  // next power of x
    }
   printf("Sum (Method 2) = %lld\n", sum);
    return 0;}
